<Window x:Class="AdminWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="675" Width="1200"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lbTableSelect" Grid.Column="0" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="lbTableSelect_SelectionChanged"/>

        <DataGrid x:Name="RecordGrid" Grid.Column="1" AutoGenerateColumns="True" SourceUpdated="RecordGrid_SourceUpdated" TargetUpdated="RecordGrid_TargetUpdated" SelectionChanged="RecordGrid_SelectionChanged"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" d:ItemsSource="{d:SampleData ItemCount=5}"/>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_Delete" Margin="10" Grid.Column="0" Click="Button_Click_Delete">Delete</Button>
            <Button x:Name="btn_Save" Margin="10" Grid.Column="1" Click="Button_Click_Save" IsEnabled="True">Save Changes</Button>
        </Grid>

    </Grid>
</Window>
